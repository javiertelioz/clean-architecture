{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "target": "es2017",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "e2e/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
