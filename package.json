{
  "name": "clean-architecture",
  "version": "1.1.3",
  "description": "A simple API built with Node.js + Clean Architecture principles",
  "author": "Javier Telio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "start:dev": "nodemon --inspect=0.0.0.0:9229 src/index.ts",
    "start": "node /src/dist/src/index.js",
    "build": "tsc --project tsconfig-build.json",
    "test:cov": "jest --coverage",
    "test:watch": "NODE_ENV=test jest --watchAll",
    "test:e2e": "NODE_ENV=test jest --config ./e2e/jest.config.js --detectOpenHandles",
    "format": "prettier --write '**/*.ts'",
    "lint": "./node_modules/eslint/bin/eslint.js src/ test/ e2e/ --ext .ts --fix",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "morgan": "^1.10.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "redis": "^3.1.2",
    "sequelize": "^6.6.4",
    "sequelize-cli": "^6.2.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "0.0.16",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "4.0.0",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.14.1",
    "@types/redis": "^2.8.30",
    "@types/sequelize": "^4.28.9",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "10.0.0",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,e2e}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
